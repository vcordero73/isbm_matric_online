<div class="container">
  <div class="row">
      <div class="col">
            <div class="overflow-auto">   
                
				<h2 class="text-center">MODULO DE AUTORIA DE MATRICULAS ONLINE </h2>
                <h3 class="text-center">Ciclo Lectivo : {{ciclo_lectivo}}</h3>
                <h4 class="text-center"> Nivel de Enseñanza: {{nivel_ense}}</h4>
                <h4 class="text-center"> Resumen Auditoria :  Cantidad Inscripto: {{cantidad_inscripto}} - Cantidad No Autorizados: {{cantidad_noaudit}}</h4>
                 <br>
                  <div class="card text-white bg-primary">
                                    <div class="card-header">
                                        <h3>SECCION DE FILTROS Y ORDENAMIENTO</h3>
                                    </div>
                                    <div class="card-body bg-light text-secondary">
                                           <div id="accordion">
                                        <div class="card">
                                            <div class="card-header" id="headingOne">
                                            <h5 class="mb-0">
                                                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                Filtros
                                                </button>
                                            </h5>
                                            </div>
                                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                                            <div class="card-body">
                                                Seccion de Filtros
                                            </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header" id="headingTwo">
                                            <h5 class="mb-0">
                                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                Ordenamiento de Tabla
                                                </button>
                                            </h5>
                                            </div>
                                            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                                            <div class="card-body">
                                                Sección para ordenar TABLAS.
                                            </div>
                                            </div>
                                        </div>
                                        </div>

                                    </div>
                                    
                </div>
 <br>
             <div class="card text-white bg-primary">
                                    <div class="card-header">
                                        <h3>LISTADO DE SOLICITUD DE MATRICULACIÓN </h3>
                                    </div>
                                    <div class="card-body bg-light text-secondary">
                                        
										<table class="table table-hover table-responsive-sm table-bordered table-sm">
                                            <thead class="thead-dark">
                                            <tr>
                                                <th scope="col">Estado</th>  
                                                <th scope="col">Sala</th>  
                                                <th scope="col">Seccion</th>  
                                                <th scope="col">Turno</th>
                                                <th scope="col">DNI Alumno</th>
                                                <th scope="col">Apellido y Nombre Alumno</th>
                                                <th scope="col">Ver Formulario</th>
                                                <th scope="col">Ver Pago</th>
                                                <th scope="col">Enviar Observación</th>
                                                <th scope="col">Auditoria</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                                {{#each inscripcion}}
                                                <tr>
                                                    <td>{{estado}}</td> 
                                                    <td>{{sala}}</td>
                                                    <td>{{seccion}}</td>
                                                    <td>{{turno}}</td>
                                                    <td>{{documento_alu}}</td>
                                                    <td>{{apynom_alu}}</td>
                                                    <!-- Button trigger modal -->
	                                                <td><a href="/edit/{{id_inscripcion}}" target="_blank" class="btn btn-success" role="button" aria-pressed="true"> Ver Formulario</a></td>
                                                    <td> <div id="container{{id_inscripcion}}"> </div> </td>
                                                    <script type="text/javascript">
                                                        var container = document.getElementById('container{{id_inscripcion}}');
                                                        if("{{ext_pago}}"==="IMAGE")
                                                        {
                                                       
                                                        container.innerHTML = '<a href="/ver_imagen?imagen={{url_pago}}"  target="_blank" class="btn btn-success" role="button" aria-pressed="true"> Ver Comp. Pago</a>';
                                                        }
                                                        else{
                                                             container.innerHTML = '<a href="/web/viewer.html?file=%2F{{url_pago}}" target="_blank" class="btn btn-success" role="button" aria-pressed="true"> Ver Comp. Pago</a>';
                                                        }

                                                    </script>
                                                    <td><a href="/audit_email?email={{email_tutor}}" target="_blank" class="btn btn-success" role="button" aria-pressed="true"> Enviar Email</a></td>
                                                    <td><a href="/audit_autoriz?id={{id_inscripcion}}&email={{email_tutor}}&dni={{documento_alu}}" class="btn btn-success" role="button" aria-pressed="true"> Autorizar</a></td>
                                                     <input type="hidden" id='fr_id_inscrip' name='fr_id_inscrip'   value="{{id_inscripcion}}">
                                                </tr>
                                                {{else}}
                                                    <td></td> 
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td><a href="#" class="btn btn-success" role="button" aria-pressed="true"> Ver Matricula</a></td>
                                                    <td><a href="#" class="btn btn-success" role="button" aria-pressed="true"> Ver Comp. Pago</a></td>
                                                    <td><a href="#" class="btn btn-success" role="button" aria-pressed="true"> Enviar Email</a></td>
                                                    <td><a href="#" class="btn btn-success" role="button" aria-pressed="true"> Auditaria</a></td>
                                        
                                                {{/each}}
                                            </tbody>
                                        </table> 
                                            
                    </div>
                
            </div>
    </div>
   </div>
</div>